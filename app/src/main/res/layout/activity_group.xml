<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.catchblocker.mutualpay.GroupActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_groupname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@android:drawable/divider_horizontal_dim_dark"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnViewGroup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Group"
        android:id="@+id/btnViewGroup"
        style="@style/Button"
        android:layout_marginBottom="125dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnAddGroup"
        android:layout_toEndOf="@+id/btnAddGroup"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Group"
        android:id="@+id/btnAddGroup"
        android:layout_alignTop="@+id/btnViewGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Button" />
</RelativeLayout>
