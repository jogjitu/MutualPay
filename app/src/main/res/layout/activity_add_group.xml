<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.catchblocker.mutualpay.AddGroupActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textGroupName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/TextBox"
        android:hint="Enter Group Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCurrency"
        android:layout_below="@+id/textGroupName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/TextBox"
        android:hint="Enter currency for group" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@android:id/list"
        style="@style/ListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Name PhoneNumber"
        android:layout_below="@+id/textCurrency"
        android:layout_above="@+id/btnAddContact" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Group"
        android:id="@+id/btnSaveGroup"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textCurrency"
        android:layout_alignEnd="@+id/textCurrency" />


    <TextView
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Contacts"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textCurrency" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textShowGroup"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSaveGroup"
        android:layout_alignStart="@+id/btnSaveGroup"
        android:layout_marginBottom="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        android:id="@+id/btnAddContact"
        style="@style/Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textShowGroup" />
</RelativeLayout>
