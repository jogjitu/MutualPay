<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/common_background_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBox">
        <item name="android:background">@color/textbox_background_color</item>
        <item name="android:layout_height">@dimen/text_box_height</item>
        <item name="android:layout_width">@dimen/text_box_width</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/button_background_color</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
    </style>

    <style name="ListView">
        <item name="android:background">@color/listview_background_color</item>
    </style>


    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>
